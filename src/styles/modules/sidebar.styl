@import '../_environment';

$sidebarHideWidth = 1024px;

.sidebar {
  z-index 3;
  transition all .2s ease;

  @media (max-width $sidebarHideWidth) {
    --sidabarWidth 50vw;
    pseudoInset absolute 0 100vw;
    width var(--sidabarWidth);
    height 100%;
    background #000;

    &.active {
      right var(--sidabarWidth);
    }
  }

  &__body {
    overflow auto;
  }

  &__toggle-btn {
    z-index 5;
    pseudoInset absolute 0 auto auto 100%;
  }
}

#shop-menu-swipe-area {
  display none;
  z-index 2;
  pseudoInset absolute 0 auto auto 0;
  user-select none;
  height 100vh;
  width 20vw;

  &:hover {
    cursor grab;
  }

  &:active {
    cursor grabbing;
  }

  @media (min-width $sidebarHideWidth) {
    display none;
  }

  &.active {
    width 100vw;
  }
}
